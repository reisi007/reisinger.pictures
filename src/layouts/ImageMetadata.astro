---
import type { InferEntrySchema } from "astro:content";
import FormattedDateTime from "./FormattedDateTime.astro";

type Props = InferEntrySchema<"imageMetadata">["metadata"];

const { captureDate, iso, aperture, shutter, focalLength, camera, lens } = Astro.props ?? {};
---

<h2>Metadaten</h2>
<div class="flex justify-center">
  <table class="table rounded-lg border border-base-300 md:w-1/2 xl:w-1/3">
    <tbody>
    {camera && (
      <tr>
        <th class="inline-flex items-center gap-x-2"><span class="material-symbols--photo-camera"></span>
          Kamera
        </th>
        <td class="font-mono">{camera}</td>
      </tr>
    )}
    {lens && (
      <tr>
        <th class="inline-flex items-center gap-x-2"><span class="material-symbols--circle-outline"></span>
          Objektiv
        </th>
        <td class="font-mono">{lens}</td>
      </tr>
    )}
    {focalLength && (
      <tr>
        <th class="inline-flex items-center gap-x-2"><span class="material-symbols--arrow-range"></span>
          Brennweite
        </th>
        <td class="font-mono">{focalLength} s</td>
      </tr>
    )}
    {shutter && (
      <tr>
        <th class="inline-flex items-center gap-x-2"><span class="material-symbols--shutter-speed"></span>
          Verschlusszeit
        </th>
        <td class="font-mono">{shutter} s</td>
      </tr>
    )}
    {aperture && (
      <tr>
        <th class="inline-flex items-center gap-x-2">
          <span class="material-symbols--camera"></span> Blende
        </th>
        <td class="font-mono">{aperture}</td>
      </tr>
    )}

    {iso && (
      <tr>
        <th class="inline-flex items-center gap-x-2"><span class="mdi--film"></span>
          ISO
        </th>
        <td class="font-mono">{iso}</td>
      </tr>
    )}
    {captureDate && (
      <tr>
        <th class="inline-flex items-center gap-x-2"><span class="material-symbols--calendar-today"></span>
          Aufnahmedatum
        </th>
        <td class="font-mono">
          <FormattedDateTime date={captureDate} />
        </td>
      </tr>
    )}
    </tbody>
  </table>
</div>
