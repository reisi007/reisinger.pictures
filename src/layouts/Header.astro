---
import { SITE_TITLE } from "../consts";
import { isSubMenu, type Menue, type MenueItem, type SubMenu, Visibility } from "./Menue";
import { Astronav, MenuItems, MenuIcon, Dropdown, DropdownItems, OpenIcon, CloseIcon } from "astro-navbar";
import ResponsiveImage from "./ResponsiveImage.astro";
import { ResponsiveImageLoading } from "./ResponsiveImageLoading";
import HeaderLink from "./HeaderLink.astro";

const reviewItem: MenueItem = { name: "Bewertungen", href: "/testimonials" };
const overview: MenueItem = { name: "Übersicht", href: "" };
const images: MenueItem = { name: "Bilder", href: "/images", visibility: Visibility.DEV_ONLY };
const menuItems = [overview, images, reviewItem];

const menue: Menue = [
  {
    name: "Beauty",
    baseHref: "/beauty",
    items: menuItems
  }, {
    name: "Akt",
    baseHref: "/akt",
    items: [
      ...menuItems,
      {
        name: "Ablauf",
        href: "/ablauf"
      }
    ]
  }, {
    name: "Couples",
    baseHref: "/couples",
    items: menuItems
  }, {
    name: "Sport",
    baseHref: "/sport",
    items: [
      menuItems[0],
      menuItems[1],
      {
        name: "ACSL",
        href: "/acsl"
      }, {
        name: "ACSL Bilder",
        href: "/acsl/images",
        visibility: Visibility.DEV_ONLY
      }, {
        name: "Black Wings Linz",
        href: "/bwl"
      }, {
        name: "BWL Bilder",
        href: "/bwl/images",
        visibility: Visibility.DEV_ONLY
      }, {
        name: "LASK",
        href: "/lask"
      }, {
        name: "LASK Bilder",
        href: "/lask/images",
        visibility: Visibility.DEV_ONLY
      }, {
        name: "ÖFB",
        href: "/oefb"
      }, {
        name: "ÖFB Bilder",
        href: "/oefb/images",
        visibility: Visibility.DEV_ONLY
      }, {
        name: "SteelVolleys Linz",
        href: "/steelvolleys"
      }, {
        name: "SteelVolleys Linz Bilder",
        href: "/steelvolleys/images",
        visibility: Visibility.DEV_ONLY
      }, {
        name: "SteelWings Linz",
        href: "/swl"
      }, {
        name: "SWL Bilder",
        href: "/swl/images",
        visibility: Visibility.DEV_ONLY
      }
    ]
  }, {
    name: "Tanz",
    baseHref: "/tanz",
    items: menuItems
  },
  {
    name: "Videos",
    href: "/videos/tanz"
  }, {
    name: "Einblicke",
    href: "/einblicke"
  }, {
    name: "Dein Fotoshooting",
    href: "/shootings"
  }
];

const isDevMode = import.meta.env.MODE === "development";

function renderMenu(entry: MenueItem | SubMenu) {
  const visibility = entry.visibility ?? Visibility.ALWAYS;
  return visibility === Visibility.ALWAYS ||
    (visibility === Visibility.DEV_ONLY && isDevMode) ||
    (visibility === Visibility.PROD_ONLY && !isDevMode);
}
---
<header class="container pb-6">
  <Astronav closeOnClick>
    <div class="flex flex-col items-center w-full justify-between">
      <a href="/" class="mx-auto my-4 size-32">
        <ResponsiveImage class="rounded-full" widths={[128]} name="logo" bg={false}
                         alt={SITE_TITLE} loading={ResponsiveImageLoading.EAGER}></ResponsiveImage>
      </a>
      <div class="block md:hidden">
        <MenuIcon>
          <OpenIcon><span class="mdi--menu text-3xl"></span></OpenIcon>
          <CloseIcon><span class="mdi--menu-close text-3xl"></span></CloseIcon>
        </MenuIcon>
      </div>
    </div>
    <MenuItems class="hidden  md:flex">
      <div class="flex flex-col w-full md:flex-row md:gap-5 md:justify-center items-center">
        {
          menue
            .filter(e => renderMenu(e))
            .map(item => {
              if (isSubMenu(item)) {
                return (
                  <Dropdown class="group flex flex-col items-center">
                    <button class="flex items-center">
                      <HeaderLink class="inline-flex items-center" href={item.baseHref}>
                        {item.name}
                        <span class="ml-1.5 mdi--menu-down group-open:rotate-180"></span>
                      </HeaderLink>

                    </button>
                    <DropdownItems class="relative z-50">
                      <div
                        class="md:absolute md:bg-white border-y md:border md:rounded md:top-2 px-2 py-6 flex flex-col items-center md:-translate-x-1/2 gap-y-6">
                        {item.items
                          .filter(e => renderMenu(e))
                          .map(e => (
                            <a href={item.baseHref + e.href}>
                              <HeaderLink href={e.href}>{e.name}</HeaderLink>
                            </a>))}

                      </div>
                    </DropdownItems>
                  </Dropdown>
                );
              } else
                return (
                  <a href={item.href} class="my-4">
                    <HeaderLink href={item.href}>{item.name}</HeaderLink>
                  </a>
                );
            })
        }
      </div>
    </MenuItems>

  </Astronav>
  <nav class="grid sm:grid-cols-2">

    <div class="flex flex-wrap items-start justify-center sm:items-center">

    </div>
  </nav>
</header>
