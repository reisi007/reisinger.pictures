---
import { type CollectionEntry } from "astro:content";
import ContentCard from "./ContentCard.astro";
import type { NumericBreakpoints } from "../styles/Breakpoints";

interface Props {
  post: CollectionEntry<"einblicke">;
  imageSizeModifiers?: Partial<NumericBreakpoints>;
}

const { post,imageSizeModifiers } = Astro.props;
---

<ContentCard
  href={`/einblicke/${post.slug}/`}
  imageName={post.data.heroImage}
  title={post.data.title}
  date={post.data.updated ?? post.data.pubDate}
  imageSizeModifiers={imageSizeModifiers}
/>