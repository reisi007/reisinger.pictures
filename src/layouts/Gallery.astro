---
import { getImageImportNameByFolder } from "../images/Images";
import ImageGallery from "./ImageGallery.astro";
import { GalleryLayout } from "./GalleryLayout";

interface Props {
  folder: string | string[],
  sorted: string[],
  layout?: GalleryLayout
}

const { folder, sorted, layout } = Astro.props;
const images = getImageImportNameByFolder(sorted, typeof folder === "string" ? [folder] : folder);
---
{images.length > 0 &&
<ImageGallery images={images} layout={layout} />}
