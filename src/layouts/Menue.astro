---
import HeaderLink from "./HeaderLink.astro";
import { type Menue } from "./Menue";

interface Props {
  menue: Menue,
  baseHref?: string
}

const { menue, baseHref: rootBaseHref = "" } = Astro.props;
---
{menue.map( entry => {
  // Normal menu
  const {href,name} = entry;

  return (
  <HeaderLink href={rootBaseHref + href}>{name}</HeaderLink>
    );
  }  )
  }
